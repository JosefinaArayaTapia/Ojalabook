<!DOCTYPE html>
<html>
	<head>
		<title>Ojalabook</title>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="#">OjalaBook</a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li class="active">
							<%= link_to "Status",statuses_path %>
						</li>
					</ul>
					<ul class="nav navbar-nav pull-right">

						<% if user_signed_in? %>
						<li>
							<%= link_to current_user.nombre_completo, edit_user_registration_path %>
						</li>
						<li>
							<%= link_to "Cerrar sesiÃ³n", destroy_user_session_path, method: :delete %>
						</li>
						<% else %>
						<% end %>
					</ul>
				</div>
			</div>
		</nav>
		</div>
		<div class="container">
			<p class="notice">
				<%= notice %>
			</p>
			<p class="alert">
				<%= alert %>
			</p>

			<%= yield %>
		</div>
	</body>
</html>
