<div class="row">
	<div class="col-md-12">

		<form class="well">

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			<%= f.input :email %>
			<%= f.input :password %>

			<% if devise_mapping.rememberable? -%>
			<div class="field">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
			</div>
			<% end -%>

			<div class="actions">
				<%= f.button  :submit, 'Entrar',class: 'btn btn-success'%>
			</div>

			<% end %>

			<%= render "devise/shared/links" %>

		</form>

	</div>

</div>
